<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/textView4" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView1" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/textView5"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp" android:gravity="center"
            android:onClick="setText" android:background="@drawable/back" android:textSize="74sp"/>
    <TextView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/textView6" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView3" app:layout_constraintStart_toEndOf="@+id/textView5"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:layout_marginRight="16dp" android:gravity="center"
            android:onClick="setText" android:background="@drawable/back" android:textSize="74sp"/>
    <TextView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/textView8" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView5" app:layout_constraintStart_toEndOf="@+id/textView7"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/textView9"
            android:gravity="center" android:onClick="setText" android:background="@drawable/back"
            android:textSize="74sp"/>
    <TextView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/textView5"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" app:layout_constraintStart_toEndOf="@+id/textView4"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/textView6"
            android:gravity="center" android:onClick="setText" android:background="@drawable/back"
            android:textSize="74sp"/>
    <TextView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/textView7"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/textView4"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/textView8" android:gravity="center" android:onClick="setText"
            android:background="@drawable/back" android:textSize="74sp"/>
    <TextView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/textView1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/textView2"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
            android:gravity="center" android:onClick="setText"
            android:background="@drawable/back" android:textSize="74sp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/titleText"/>
    <TextView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/textView3"
            app:layout_constraintStart_toEndOf="@+id/textView2" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:gravity="center" android:onClick="setText"
            android:background="@drawable/back" android:textSize="74sp" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/titleText"/>
    <TextView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/textView9"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView6" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:layout_marginRight="16dp"
            app:layout_constraintStart_toEndOf="@+id/textView8" app:layout_constraintHorizontal_bias="0.5"
            android:gravity="center" android:onClick="setText" android:background="@drawable/back"
            android:textSize="74sp"/>
    <TextView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/textView2"
            app:layout_constraintStart_toEndOf="@+id/textView1"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/textView3"
            android:gravity="center"
            android:onClick="setText" android:background="@drawable/back" android:textSize="74sp"
            android:layout_marginTop="16dp" app:layout_constraintTop_toBottomOf="@+id/titleText"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="72dp"
            android:id="@+id/titleText"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp" android:textSize="36sp"
            android:gravity="center"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/winnerText" app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            android:layout_marginRight="16dp"
            android:gravity="center" android:textSize="24sp"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/textView8"/>
    <Button
            android:text="@string/new_game"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="16dp" android:layout_marginRight="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp" android:onClick="resetGame"/>
</androidx.constraintlayout.widget.ConstraintLayout>